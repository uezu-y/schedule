<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.startdate.to_datetime.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.enddate.to_datetime.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @user.end == checked_value='1' %>
          　　○
      <% else @user.end == checked_value='0' %>
          
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュール</th>
    <td><%= @user.sche_memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    <li><%= link_to "スケジュールを編集する", [:edit_user] %></li>
    <li><%= link_to "スケジュールを削除する", :user, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
  </ul>
</div>